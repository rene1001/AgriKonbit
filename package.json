{
  "name": "agrikonbit",
  "version": "1.0.0",
  "description": "Crowdfunding + Marketplace platform for agricultural projects",
  "main": "server/index.js",
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "cd server && npm run dev",
    "client": "cd client && npm start",
    "build": "cd client && npm run build",
    "start": "cd server && npm start",
    "test": "cd server && npm test && cd ../client && npm test",
    "install-all": "npm install && cd server && npm install && cd ../client && npm install && cd ../contracts && npm install",
    "migrate": "cd server && npm run migrate",
    "docker:up": "cd docker && docker compose up --build",
    "docker:down": "cd docker && docker compose down -v",
    "e2e:install": "npx playwright install --with-deps",
    "e2e": "npx playwright test",
    "test:all": "npm run test:functional && npm run test:performance && npm run test:security && npm run test:ui && npm run test:integration",
    "test:functional": "jest tests/functional --verbose",
    "test:performance": "jest tests/performance --verbose",
    "test:security": "jest tests/security --verbose",
    "test:ui": "playwright test tests/ui",
    "test:seo": "playwright test tests/seo",
    "test:accessibility": "playwright test tests/accessibility",
    "test:compatibility": "playwright test tests/compatibility",
    "test:integration": "jest tests/integration --verbose",
    "test:regression": "jest tests/regression --verbose",
    "test:content": "playwright test tests/content",
    "test:report": "node scripts/generate-test-report.js"
  },
  "keywords": [
    "agriculture",
    "crowdfunding",
    "marketplace",
    "blockchain",
    "nft"
  ],
  "author": "AgriKonbit Team",
  "license": "MIT",
  "devDependencies": {
    "@axe-core/playwright": "^4.8.3",
    "@playwright/test": "^1.55.1",
    "concurrently": "^8.2.2",
    "jest": "^29.7.0",
    "lighthouse": "^11.4.0",
    "pa11y": "^7.0.0",
    "supertest": "^6.3.3"
  },
  "dependencies": {
    "axios": "^1.12.2",
    "dotenv": "^17.2.3",
    "mysql2": "^3.15.1"
  }
}
